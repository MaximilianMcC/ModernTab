{
    "name": "Modern Tab",
    "description": "Replace the standard new tab screen with a fancy modern one.",
    "version": "2.0",
    "manifest_version": 3,
    "permissions": [
        "storage"
    ],
    "chrome_url_overrides": {
        "newtab": "tab.html"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "./icon.png",
            "32": "./icon.png",
            "48": "./icon.png",
            "128": "./icon.png"
        }
    },
    "icons": {
        "16": "./icon.png",
        "32": "./icon.png",
        "48": "./icon.png",
        "128": "./icon.png"
    }
}